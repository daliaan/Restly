<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="6dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <include layout="@layout/restaurant_cell"
        android:id="@+id/restaurant_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_cell"
        app:layout_constraintStart_toEndOf="@id/product_price"
        android:layout_marginStart="16dp"
        android:gravity="end"
        android:layout_gravity="end"
        android:id="@+id/allergen_list"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_price"
        android:textSize="19sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/allergen_list"
        app:layout_constraintBottom_toBottomOf="@id/allergen_list"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/allergen_list"/>

</androidx.constraintlayout.widget.ConstraintLayout>